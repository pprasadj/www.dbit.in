extends  ../_skeleton

include ../elements/_ui-breadcrubms

block variables
	- var activeIndex = 6
	- var title = 'Forms'

block title
	title= title

block page
	// Page Header
	include ../sections/_header-secondary

	// Page Content
	+breadcrumb-classic(
	title,
	{
		0: {
			"title": 'home',
			"href": 'index.html'
		},
		1: {
			"title": 'Pages',
			"href": '#'
		},
		2: {
			"title": 'Forms',
			"href": ''
		}
	},
	'breadcrumbs-parallax-02'
	)
	section.section-50.section-md-75.section-md-100.section-lg-120.section-xl-top-150
		.shell
			h1 Forms
			.range.offset-top-40
				.cell-xl-4.cell-lg-5.cell-md-6.cell-sm-8.text-left
					h2 Login form
					form.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
						.form-group.postfix-xl-right-40
							label.form-label(for="contact-name-login") Username or E-mail *
							input#contact-name-login.form-control(type="text" name="name" data-constraints="@Required")
						.form-group.postfix-xl-right-40
							label.form-label(for="contact-phone-login") Password *
							input#contact-phone-login.form-control(type="password" name="password" data-constraints="@Required")

						button(type="submit").btn.btn-sunglow.offset-top-35 Sign in


	include ../sections/_section-form

	section.section-50.section-md-75.section-md-100.section-lg-120.section-xl-150
		.shell.text-left
			h2
				span.small Contact Us (with reCAPTCHA)
				| Just fill in the contact form, and we will answer you shortly.

			form.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
				.range.offset-top-40.offset-md-top-60
					.cell-lg-4.cell-md-6
						.form-group.postfix-xl-right-40
							label.form-label(for="contact-2-name") Name *
							input#contact-2-name.form-control(type="text" name="name" data-constraints="@Required")
						.form-group.postfix-xl-right-40
							label.form-label(for="contact-2-email") E-mail *
							input#contact-2-email.form-control(type="email" name="email" data-constraints="@Email @Required")
					.cell-lg-4.cell-md-6.offset-top-20.offset-md-top-0
						.form-group.postfix-xl-right-40
							label.form-label(for="contact-2-company") Company
							input#contact-2-company.form-control(type="text" name="company" data-constraints="@Required")
						.form-group.postfix-xl-right-40
							label.form-label(for="contact-2-subject") Subject
							input#contact-2-subject.form-control(type="text" name="subject" data-constraints="@Required")
					.cell-lg-4.offset-top-20.offset-lg-top-0
						.form-group.postfix-xl-right-40
							label.form-label(for="contact-2-message") Message
							textarea#contact-2-message.form-control(name="message" data-constraints="@Required")
					.cell-lg-4.offset-top-20
						.form-group.postfix-xl-right-40.form-wrap-recaptcha
							.recaptcha#captcha1(data-sitekey='6LfZlSETAAAAAC5VW4R4tQP8Am_to4bM3dddxkEt')
				button(type="submit").btn.btn-form.btn-sunglow Send message

	section.section-50.section-md-75.section-md-130.bg-wild-sand
		.shell
			.range
				.cell-lg-8.cell-xl-6
					h2 Stay tuned and subscribe to our newsletter
					form.rd-mailform.text-left.rd-mailform-subscribe(data-form-output="form-output-global", data-form-type='subscribe', method='post', action='bat/rd-mailform.php')
						.form-group
							label.form-label(for="footer-subscribel-email") Enter your e-mail
							input#footer-subscribel-email.form-control(type="email" name="email" data-constraints="@Email @Required")
						button(type="submit").btn.btn-sunglow subscribe

	section.section-50.section-md-75.section-md-130
		.shell
			.range
				.cell-lg-8.cell-xl-6
					h2 Campaign Monitor
					form.rd-form.campaign-mailform.rd-mailform-subscribe(data-form-output='form-output-global' action='https://templatermonster.createsend.com/t/j/s/zjjikd/' method='post')
						.form-group
							label.form-label(for="campaign-email") Enter your e-mail
							input#campaign-email.form-control(type="email" name="cm-zjjikd-zjjikd" data-constraints="@Email @Required")
						button(type="submit").btn.btn-sunglow subscribe

	section.section-50.section-md-75.section-md-130.bg-wild-sand
		.shell
			.range
				.cell-lg-8.cell-xl-6
					h2 MailChimp
					form.rd-form.mailchimp-mailform.rd-mailform-subscribe(data-form-output='form-output-global' action='https://templatemonster.us15.list-manage.com/subscribe/post?u=ba5bb362073a413f48e4a7b90&id=8dc95d9dec' method='post')
						.form-group
							label.form-label(for="mailchimp-email") Enter your e-mail
							input#mailchimp-email.form-control(type="email" name="email-mailchimp" data-constraints="@Email @Required")
						button(type="submit").btn.btn-sunglow subscribe


	// Page Footer
	include ../sections/_footer-classic